<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.edu.resumeparseclient.LoginController">
<Label text="Вход с систему резюме">
    <font>
        <Font name="System Bold" size="23.0" />
    </font>
</Label>
<HBox alignment="CENTER" spacing="10">
    <TextField fx:id="login" promptText="логин">
         <font>
            <Font size="16.0" />
         </font></TextField>
</HBox>
<HBox alignment="CENTER" spacing="10">
    <PasswordField fx:id="password" promptText="пароль">
         <font>
            <Font size="16.0" />
         </font></PasswordField>
</HBox>
<HBox alignment="CENTER" spacing="10">
    <Button fx:id="ok" onAction="#buttonOK" text="Войти">
        <font>
            <Font size="17.0" />
        </font>
    </Button>
    <Button fx:id="cancel" onAction="#buttonGetRegister" text="Регистрация">
        <font>
            <Font size="17.0" />
        </font>
    </Button>
</HBox>
</VBox>
